<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
		<add assembly="NLog.Targets.ElasticSearch"/>
	</extensions>


	<targets async="true">

		<target name="elastic" xsi:type="ElasticSearch" index="ms-api-forum-${date:format=yyyy.MM.dd}"
                uri="http://localhost:9200"
				requireAuth="true"
				username="ms-forum-admin"
				password="ms-forum-admin"
                layout ="API:ms-api-forum
				|${longdate}
				|${event-properties:item=EventId_Id}
				|${uppercase:${level}}
				|${logger}
				|${message} ${exception:format=tostring}
				|url: ${aspnet-request-url}
				|action: ${aspnet-mvc-action}" >
		</target>

		<target name="console" xsi:type="ColoredConsole" 
				layout="${message}${onexception:${newline}EXCEPTION\: ${exception:format=ToString}}" />
	</targets>

	<rules>
		<logger name="*" levels="Info" writeTo="elastic" />
		<logger name="*" levels="Debug" writeTo="elastic" />
		<logger name="*" levels="Error" writeTo="elastic" />
		<logger name="*" levels="Info" writeTo="console" />
		<logger name="*" levels="Error" writeTo="console" />
	</rules>
</nlog>